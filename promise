<body>
    <script>
        trainticket = false;

        function bookTicket() {
            return new Promise((resolve, reject) => {
                setTimeout(()=>{
                    if(trainticket){
                        resolve("you got your ticket")
                    }
                    else{
                        reject("you dont have ticket")
                    }
                },3000)

            })
        }
        function getTicket(){
            bookTicket().then((message)=>{
                console.log(message)
            }).catch((error)=>{
                console.log(error)
            })
            .finally(()=>{
                console.log("any way have a nice day")
            })
        }
        getTicket();
    </script>
    
</body>
